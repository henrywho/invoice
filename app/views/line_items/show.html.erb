<h1>LineItems#show</h1>
<p>Find me in app/views/line_items/show.html.erb</p>
<table>
  <tr>
    <td>name</td>
    <td>booked amount</td>
    <td>actual amount</td>
    <td>adjustments</td>
    <td>campaign_id</td>
  </tr>
  <tr>
    <td><%= @line_item.name %></td>
    <td><%= @line_item.booked_amount %></td>
    <td><%= @line_item.actual_amount %></td>
    <td>
        <%= form_for @line_item do |f| %>
          <%= f.number_field :adjustments %>
          <%= f.submit "Update" %>
        <% end %>
    </td>
    <td><%= li.campaign_id %></td>
  </tr>
</table>

<h2>Changelog</h2>
<% if @line_item.versions.empty? %>
  No previous changes
<% else %>
  <ul>
    <% @line_item.versions.reverse.each do |version| %>
      <li><%= prettify_changeset(version.changeset) %></li>
    <% end %>
  </ul>
<% end %>
